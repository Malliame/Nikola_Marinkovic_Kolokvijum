<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    tools:context=".view.activities.MainActivity">


    <TextView
        android:id="@+id/mondayItemTv"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tuesdayItemTv"
        />

    <TextView
        android:id="@+id/tuesdayItemTv"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/mondayItemTv"
        app:layout_constraintEnd_toStartOf="@id/wednesdayItemTv"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/wednesdayItemTv"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tuesdayItemTv"
        app:layout_constraintEnd_toStartOf="@id/thurstdayItemTv"
        />

    <TextView
        android:id="@+id/thurstdayItemTv"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/wednesdayItemTv"
        app:layout_constraintEnd_toStartOf="@id/fridayItemTv"
        />

    <TextView
        android:id="@+id/fridayItemTv"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/thurstdayItemTv"
        app:layout_constraintEnd_toStartOf="@id/saturdayItemTv"
        />

    <TextView
        android:id="@+id/saturdayItemTv"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@id/sundayItemTv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/fridayItemTv"
        />

    <TextView
        android:id="@+id/sundayItemTv"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/saturdayItemTv"
        app:layout_constraintTop_toTopOf="parent" />
    




</androidx.constraintlayout.widget.ConstraintLayout>